celle-ci : <foreign xml:lang="grc">έπε'στειλεν δ ΣΤΡΑΤΟΠΕΔΑΡΧΗΣ</foreign> <hi rend="superscript">2</hi> <foreign xml:lang="grc">τίρ χυρίιο</foreign>, <hi rend="italic">le gé</hi>-
